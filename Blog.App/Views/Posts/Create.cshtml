@model Blog.App.ViewModels.PostViewModel

@{
    ViewData["Title"] = "Novo Post";
}

<div class="col-md-12">
    <div class="standard-box">
        <h1 class="standard-header">
            <span class="text">Post</span>
            <span class="btn-group">
                <a class="btn btn-lg btn-danger tiles-view active" asp-action="Index">Voltar</a>
            </span>
        </h1>
        <form class="form-horizontal form-register" enctype="multipart/form-data" role="form" asp-action="Create">
            <div class="form-register-header">
                <h2 class="text-center no-margin">Registrar novo post</h2>
                <div class="row">
                    <div class="col-sm-8 col-sm-offset-2">
                        <hr>
                    </div>
                </div>
                @*<div asp-validation-summary="All" class="text-danger"></div>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                @*Em vez de eu escrever 'All ou ModelOnly' eu creio um viecomponent q mostra os dois tanto da view quanto do backend*@
                @*isso é um ViewComponent - vc significa viewcomponet e Sumary é o nome do component*@
                <vc:Summary></vc:Summary>
            </div>

            <div class="form-group has-feedback">
                <label asp-for="CategoriaId" class="col-sm-3 control-label"></label>
                <div class="col-sm-6">
                    <select asp-for="CategoriaId" class="form-control" asp-items="@(new SelectList(Model.Categorias, "Id", "Nome"))">
                        <option></option>
                    </select>
                    <span asp-validation-for="CategoriaId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="Titulo" class="col-sm-3 control-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Titulo" class="form-control" placeholder="Titulo">
                    <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group has-feedback">
                <label asp-for="Corpo" class="col-sm-3 control-label"></label>
                <div class="col-sm-6">
                    <textarea asp-for="Corpo" class="form-control" placeholder="corpo do post..."></textarea>
                    <span class="glyphicon glyphicon-pencil form-control-feedback"></span>
                    <span asp-validation-for="Corpo" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group has-feedback">
                <label class="col-sm-3 control-label"></label>
                <div class="col-sm-6">
                    <input type="file" class="custom-file-input" id="ImagemUpload" asp-for="ImagemUpload">
                    <label data-browse="Procurar" style="width:400px" class="custom-file-label" for="ImagemUpload"></label>
                    <span asp-validation-for="ImagemUpload" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-3 col-sm-6">
                    <button type="submit" id="salvar" class="btn standard-hover-effect bg-red btn-lg btn-block">
                        <span class="text">Salvar <i class="fa fa-arrow-right"></i></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }   
    
}