@model IEnumerable<Blog.App.ViewModels.PostViewModel>

<div class="row">
    <div class="col-md-12 col-sm-6 col-xs-12">
        <div class="standard-box">
            <h2 class="standard-header">
                <span class="text">Top post</span>
            </h2>  
            @{ 
                var cont = 0;               
            }
            @foreach (var item in ViewBag.Top5)
            {
                cont = cont + 1;
                <div class="standard-article-item top-list-item">                    
                    <h3 class="standard-article-header">@item.Titulo</h3> 
                    <div class="progress">
                        <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                            <span class="text">@item.Contador  comentário (s)</span>
                        </div>
                    </div>
                    <p class="color-green"><small><i class="fa fa-arrow-up"></i> @cont </small></p>
                </div>
            }
        </div>
    </div>
    <div class="col-md-12 col-sm-6 col-xs-12">
        <div class="standard-box">
            <h2 class="standard-header">
                <span class="text">Eventos</span>
            </h2>
            <div class="standard-article-item event">
