@model IEnumerable<Blog.App.ViewModels.PostViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="standard-box no-border" id="slider">
            <div id="carousel-main" class="carousel slide">
                <ol class="carousel-indicators">
                    <li data-target="#carousel-main" data-slide-to="0" class="active"></li>
                    <li data-target="#carousel-main" data-slide-to="1"></li>
                    <li data-target="#carousel-main" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/layout/img/slider-photos/concert-1.jpg" alt="slide-1">
                        <div class="carousel-caption">
                            <div class="main-icon">
                                <div class="hex-shape">
                                    <i class="fa fa-code"></i>
                                </div>
                            </div>
                            <h1 class="carousel-heading">Battlefield V</h1>
                            <p>Battlefield V é um jogo eletrônico de tiro em primeira pessoa, desenvolvido pela Criterion Games, EA DICE e publicado pela Electronic Arts</p>
                            
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/layout/img/slider-photos/concert-2.jpg" alt="slide-2">
                        <div class="carousel-caption">
                            <div class="main-icon">
                                <div class="hex-shape">
                                    <i class="fa fa-twitter"></i>
                                </div>
                            </div>
                            <h1 class="carousel-heading">Twitter Bootstrap 3</h1>
                            <p>Based on the one of the greatest HTML framework. This provides a standardized and simple scalability of your website.</p>
                        </div>
                    </div>
                    <div class="item">
                        <img src="~/layout/img/slider-photos/concert-3.jpg" alt="slide-3">
                        <div class="carousel-caption">
                            <div class="main-icon">
                                <div class="main-icon">
                                    <div class="hex-shape">
                                        <i class="fa fa-mobile"></i>
                                    </div>
                                </div>
                            </div>
                            <h1 class="carousel-heading">Responsive Web Design</h1>
                            <p>Scales and adapts to any resolution and any kind of mobile device.You can give users access to your site from any kind of device.</p>
                        </div>
                    </div>
                </div>
                <a class="left carousel-control" href="#carousel-main" data-slide="prev">
                    <i class="fa fa-long-arrow-left"></i>
                </a>
                <a class="right carousel-control" href="#carousel-main" data-slide="next">
                    <i class="fa fa-long-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="standard-box">
            <h2 class="standard-header">
                <span class="text">Posts</span>
                <span class="btn-group">
                    <a class="btn btn-lg btn-danger tiles-view active" asp-action="Create">Novo post</a>
                </span>
            </h2>
            @foreach (var item in Model)
            {
                <div class="standard-article-item news">
                    <div class="row">
                        <div class="col-sm-4">
                            <a class="standard-article-image" href="news-item.html">
                                <span class="standard-article-date date-full">                                    
                                    <span class="month">@Html.DisplayFor(modelItem => item.CriadoEm)</span>                                    
                                </span>
                                @*<span class="standard-author"><i class="fa fa-user"></i> <strong>@Html.DisplayFor(modelItem => item.AutorId)</strong></span>*@
                                <span class="standard-author"><i class="fa fa-user"></i> <strong>@Html.DisplayFor(modelItem => item.Email)</strong></span>
                                <img class="img-responsive" src="~/imagens/@item.Imagem" alt="@item.Imagem">
                                <span class="rating">
                                    <span class="star positive">
                                        <span class="glyphicon glyphicon-star"></span>
                                    </span>
                                    <span class="star positive">
                                        <span class="glyphicon glyphicon-star"></span>
                                    </span>
                                    <span class="star positive">
                                        <span class="glyphicon glyphicon-star"></span>
                                    </span>
                                    <span class="star negative">
                                        <span class="glyphicon glyphicon-star"></span>
                                    </span>
                                    <span class="star negative">
                                        <span class="glyphicon glyphicon-star"></span>
                                    </span>
                                </span>
                            </a>
                        </div>
                        <div class="col-sm-8">
                            <h3 class="standard-article-header"><a asp-action="Detalhes" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Titulo)</a></h3>
                            <div class="list-toolbar">
                                <a href="news-item.html#comments-list"><i class="fa fa-comments"></i> 1 comment</a>
                                <i class="fa fa-tags"></i> <a href="#">@Html.DisplayFor(modelItem => item.Categoria.Nome)</a>
                            </div>
                            @*<p class="corpo">@Html.DisplayFor(modelItem => item.Corpo)</p>*@
                            <p class="corpo1">
                                @{ 
                                    string x = item.Corpo;

                                    if (x != null && x.Length > 200)
                                    {
                                        x = x.Substring(0, 200);
                                    }
                                }

                                @Html.Raw(x)
                            </p>
                            <a class="btn standard-hover-effect bg-red" asp-action="Detalhes" asp-route-id="@item.Id">
                                <span class="text">Mais</span>
                            </a>
                        </div>
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                </div>
            }       
                        
            <div class="text-center">
                <ul class="pagination">
                    <li class="disabled"><a href="#"><small>&laquo;</small> First</a></li>
                    <li class="disabled"><a href="#"><small>&laquo;</small> Previous</a></li>
                    <li class="active"><a href="#">1</a></li>
                    <li><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                    <li><a href="#">Next <small>&raquo;</small></a></li>
                    <li><a href="#">Last <small>&raquo;</small></a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <partial name="_ListaPostMaisComentados" />
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(function(){
        $(".corpo").each(function(i){
            len=$(this).text().length;
            if(len>60)
            {
                $(this).text($(this).text().substr(0,160)+'...');
            }
        });       
    });
</script>

