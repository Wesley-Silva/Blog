<!DOCTYPE html>
<html class="no-js">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>Blog</title>

    <!-- Opens Sans Font -->
    @*<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,600' rel='stylesheet' type='text/css'>*@

    <!-- Bootstrap styles -->
    <link href="~/layout/bootstrap-3.3.6-dist/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Font Awesome -->
    <link href="~/layout/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Lightbox styles -->
    <link href="~/layout/lightbox/css/lightbox.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Custom styles -->
    <link href="~/layout/css/styles.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Modernizr -->
    <script type="text/javascript" src="~/layout/js/modernizr.custom.min.js"></script>

    <script type="text/javascript">

        //checking media queries browsers support
        Modernizr.load({
            test: Modernizr.mq('only all'),
            nope: 'layout/js/respond.min.js'
        });

    </script>

</head>

<body data-spy="scroll" data-target="#main-menu">
    <div class="preloader">
        <div class="loader">
            <div class="bar bar-1 bg-red"></div>
            <div class="bar bar-2 bg-orange"></div>
            <div class="bar bar-3 bg-yellow"></div>
            <div class="bar bar-4 bg-green"></div>
            <div class="bar bar-5 bg-green-2"></div>
            <div class="text">Blog.........</div>
        </div>
    </div>
    <div class="container">
        <div class="header-top">
            <div class="row">
                <div class="col-xs-5">
                    <ul class="list-inline social-links">
                        <li>
                            <a href="#"><i class="fa fa-twitter"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li class="hidden-xs">
                            <a href="#"><i class="fa fa-skype"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li class="hidden-xxs">
                            <a href="#"><i class="fa fa-linkedin"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li class="hidden-xxs">
                            <a href="#"><i class="fa fa-google-plus"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-youtube-play"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li class="hidden-xs">
                            <a href="#"><i class="fa fa-flickr"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li>
                            <a href="#"><i class="fa fa-facebook"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                        <li class="hidden-xs">
                            <a href="#"><i class="fa fa-pinterest"></i><span class="equalizer-bar bg-red"></span></a>
                        </li>
                    </ul>
                </div>
                <div class="col-xs-7">
                    <div class="header-top-dropdown">
                        <div class="btn-group dropdown">
                           
                            <partial name="_LoginPartial" />
                        </div>                        
                    </div>
                </div>
            </div>
        </div>
        <div class="main-header">
            <div class="navbar navbar-inverse">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#main-menu">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <div class="navbar-brand">
                        <a asp-controller="Posts" asp-action="Index"><img src="~/layout/img/logo.png" alt="Equalizer"> Blog </a>
                    </div>
                </div>
                <div class="slogan hidden-xs"><i class="fa fa-quote-left"></i>Jogos, games e tecnologias !!!</div>
                <div class="collapse navbar-collapse" id="main-menu">
                    <ul class="nav navbar-nav">
                        <li class="active">
                            <a asp-area="" asp-controller="Categorias" asp-action="Index">
                                <span class="text">Categorias</span>
                                <span class="equalizer-bar bg-blue"></span>
                            </a>
                        </li>
                        <li class="active">
                            <a asp-area="" asp-controller="Posts" asp-action="Index">
                                <span class="text">Posts</span>
                                <span class="equalizer-bar bg-blue"></span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="side-menu-tab">
            <a class="expand" href="#">
                <i class="fa fa-gear"></i>
            </a>
            <div class="side-menu-tab-content">
                <h3 class="side-menu-header">Style switcher</h3>
                <h4>Box transparency</h4>
                <div class="row">
                    <div class="col-xs-6">
                        <a class="btn standard-hover-effect bg-red btn-block change-opacity" href="#" data-opacity="low">
                            <span class="text">Low</span>
                        </a>
                    </div>
                    <div class="col-xs-6">
                        <a class="btn standard-hover-effect bg-red btn-block change-opacity active" href="#" data-opacity="high">
                            <span class="text">High</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            @RenderBody()
        </div>        
    </div>
    <footer class="footer">
        <div class="container">
            <div class="standard-box bottom-box">
                <a class="scroll-up" id="toTop" href="#">
                    <i class="fa fa-chevron-up"></i>
                </a>
                <p>&copy; 2020 <a href="http://portfolio-kwarc.pl">Blog</a></p>
                <hr>
                <p class="no-margin clearfix">
                    <a class="logo pull-right" asp-controller="Posts" asp-action="Index">
                        <img src="~/layout/img/logo.png" alt="Equalizer"> Blog
                    </a> <small>
                        *Entre em contato conosco -
                        <a href="http://www.freerangestock.com">
                            <email>blog</email>
                            - <email email-domain="outlook.com">suporte</email>
                        </a>
                    </small>
                </p>
            </div>
        </div>
    </footer>

    <!-- jQuery -->
    <script type="text/javascript" src="~/layout/js/jquery.1.11.0.min.js"></script>

    <!-- Bootstrap -->
    <script type="text/javascript" src="~/layout/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>

    <!-- jQuery cookie -->
    <script type="text/javascript" src="~/layout/js/jquery.cookie.min.js"></script>

    <!-- jQuery scrollTo -->
    <script type="text/javascript" src="~/layout/js/jquery-scrollto-min.js"></script>

    <!-- Lightbox -->
    <script type="text/javascript" src="~/layout/lightbox/js/lightbox.min.js"></script>

    <!-- Google maps -->
    <script src="https://maps.googleapis.com/maps/api/js"></script>

    <!-- Masonry -->
    <script type="text/javascript" src="~/layout/js/masonry.pkgd.min.js"></script>

    <!-- Shuffle -->
    <script type="text/javascript" src="~/layout/js/jquery.shuffle.modernizr.min.js"></script>

    <!-- Custom javascript -->
    <script type="text/javascript" src="~/layout/js/custom.min.js"></script>

    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
