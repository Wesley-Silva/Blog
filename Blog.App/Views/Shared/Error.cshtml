@model ErrorViewModel
@{
    Layout = null;
    ViewData["Title"] = Model == null ? "Ocorreu um erro" : Model.Titulo;
}

<!DOCTYPE html>
<html class="no-js">

<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>Equalizer</title>

    <!-- Opens Sans Font -->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,700,600' rel='stylesheet' type='text/css'>

    <!-- Bootstrap styles -->
    <link href="~/layout/bootstrap-3.3.6-dist/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Font Awesome -->
    <link href="~/layout/css/font-awesome.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Lightbox styles -->
    <link href="~/layout/lightbox/css/lightbox.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Custom styles -->
    <link href="~/layout/css/styles.min.css" media="screen" rel="stylesheet" type="text/css">

    <!-- Modernizr -->
    <script type="text/javascript" src="~/layout/js/modernizr.custom.min.js"></script>

    <script type="text/javascript">

        //checking media queries browsers support
        Modernizr.load({
            test: Modernizr.mq('only all'),
            nope: 'js/respond.min.js'
        });

    </script>

</head>

<body class="error-page">
    <div class="preloader">
        <div class="loader">
            <div class="bar bar-1 bg-red"></div>
            <div class="bar bar-2 bg-orange"></div>
            <div class="bar bar-3 bg-yellow"></div>
            <div class="bar bar-4 bg-green"></div>
            <div class="bar bar-5 bg-green-2"></div>
            <div class="text">Loading</div>
        </div>
    </div>
    <div class="container">
        <div class="error-box">
            <div class="overlay"></div>
            <div class="collaboration-box-content">
                <div class="baloon">
                    <a class="logo" href="index.html">
                        <div class="loader">
                            <div class="bar bar-1 bg-red"></div>
                            <div class="bar bar-2 bg-orange"></div>
                            <div class="bar bar-3 bg-yellow"></div>
                            <div class="bar bar-4 bg-green"></div>
                            <div class="bar bar-5 bg-green-2"></div>
                        </div> Blog
                    </a>
                    <hr>
                    <div class="clearfix"></div>
                    @{
                        if (Model == null)
                        {
                            <h1 class="text-heading">Error 404</h1>
                            <p>Ooops! Ocorreu um erro, Nosso time será avisado e iremos corrigir em breve!</p>                            
                        }
                        else
                        {
                            <h1>@Html.Raw(Model.Titulo)</h1>
                            <h2 class="text-danger">@Html.Raw(Model.Mensagem)</h2>
                        }
                    }
                    <a asp-controller="Posts" asp-action="Index">Voltar</a>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery -->
    <script type="text/javascript" src="~/layout/js/jquery.1.11.0.min.js"></script>

    <!-- Bootstrap -->
    <script type="text/javascript" src="~/layout/bootstrap-3.3.6-dist/js/bootstrap.min.js"></script>

    <!-- jQuery parallax -->
    <script type="text/javascript" src="~/layout/js/jquery.parallax-1.1.3-min.js"></script>

    <!-- jQuery scrollTo -->
    <script type="text/javascript" src="~/layout/js/jquery-scrollto-min.js"></script>

    <!-- Lightbox -->
    <script type="text/javascript" src="~/layout/lightbox/js/lightbox.min.js"></script>

    <!-- Google maps -->
    <script src="https://maps.googleapis.com/maps/api/js"></script>

    <!-- skrollr -->
    <script type="text/javascript" src="~/layout/js/skrollr.min.js"></script>

    <!-- Masonry -->
    <script type="text/javascript" src="~/layout/js/masonry.pkgd.min.js"></script>

    <!-- Shuffle -->
    <script type="text/javascript" src="~/layout/js/jquery.shuffle.modernizr.min.js"></script>

    <!-- Custom javascript -->
    <script type="text/javascript" src="~/layout/js/custom.min.js"></script>

</body>
</html>