@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" style="margin-top:-1px;" title="Manage" class="btn btn-link navbar-btn navbar-link"><span style="color:yellow;">Olá</span> <span style="color:red;">@UserManager.GetUserName(User)</span> </a>
            </li>
            <li>
                <button type="submit" style="margin-right:40px;" class="btn btn-link navbar-btn navbar-link">Sair</button>
            </li>
        </ul>
    </form>
}
else
{
    <a class="btn btn-danger" id="cores" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    <a class="btn btn-danger" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
}